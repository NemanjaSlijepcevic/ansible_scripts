access_control:
  default_policy: deny
  rules:
    - domain: 
      - "{{ authelia_links.domain }}" 
      - "{{ grafana.domain }}" 
      - "{{ homeassistant.domain }}" 
      - "{{ influxdb.domain }}" 
      - "{{ kuma.domain }}" 
      - "{{ mqtt.domain }}"
      - "{{ node.exporter.domain }}" 
      - "{{ node.crowdsec.domain }}"  
      - "{{ node.docker.domain }}"  
      - "{{ node.ip.domain }}"
      - "{{ node.traefik.domain }}" 
      - "{{ prometheus.domain }}" 
      policy: bypass
    - domain:
      - "{{ traefik_links.name.link }}" 
      policy: two_factor

session:
  cookies:
  - domain: "{{ default.domain }}" 
    authelia_url: "{{ authelia_links.url }}" 