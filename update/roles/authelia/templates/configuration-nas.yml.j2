access_control:
  default_policy: deny
  rules:
    - domain: 
      - "{{ authelia_links.domain }}" 
      - "{{ bazarr.domain }}" 
      - "{{ emby.domain }}" 
      - "{{ lidarr.domain }}" 
      - "{{ nas.domain }}"
      - "{{ node.exporter.domain }}" 
      - "{{ node.crowdsec.domain }}"    
      - "{{ node.docker.domain }}"  
      - "{{ node.traefik.domain }}" 
      - "{{ plex.domain }}"
      - "{{ prowlarr.domain }}" 
      - "{{ radarr.domain }}" 
      - "{{ sonarr.domain }}" 
      policy: bypass
    - domain: 
      - "{{ transmission.domain }}" 
      - "{{ netboot.domain }}" 
      policy: one_factor
    - domain:
      - "{{ traefik_links.name.link }}" 
      policy: two_factor

session:
  cookies:
  - domain: "{{ default.domain }}" 
    authelia_url: "{{ authelia_links.url }}" 